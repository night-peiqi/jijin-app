{
  "name": "fund-eye",
  "type": "module",
  "version": "1.0.7",
  "description": "FundEye - 实时追踪基金估值",
  "repository": {
    "type": "git",
    "url": "https://github.com/night-peiqi/fund-eye-client"
  },
  "main": "dist-electron/main.cjs",
  "author": {
    "name": "FundEye Team"
  },
  "scripts": {
    "dev": "vite",
    "build": "npx vue-tsc && vite build && electron-builder",
    "build:win": "npx vue-tsc && vite build && electron-builder --win",
    "build:mac": "npx vue-tsc && vite build && electron-builder --mac",
    "build:all": "npx vue-tsc && vite build && electron-builder --win --mac",
    "preview": "vite preview",
    "electron:dev": "vite --mode electron",
    "electron:build": "npx vue-tsc && vite build && electron-builder",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "axios": "^1.7.9",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.7.3",
    "element-plus": "^2.4.4",
    "pinia": "^2.1.7",
    "vue": "^3.3.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^20.10.5",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vitest/coverage-v8": "^1.1.0",
    "@vue/test-utils": "^2.4.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.31.0",
    "fast-check": "^3.15.0",
    "husky": "^9.1.7",
    "jsdom": "^23.0.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.18.0",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^1.1.0",
    "vue-tsc": "^3.2.4"
  },
  "build": {
    "appId": "com.fundeye.app",
    "productName": "FundEye",
    "copyright": "Copyright © 2024 FundEye",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraMetadata": {
      "main": "dist-electron/main.cjs"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}-setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FundEye"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.finance",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icons",
      "category": "Finance",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  }
}
